package day0619;

import java.util.Scanner;

public class QuizOper_13 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		/*
		 * 이름입력
		 * 강호동
		 * 키 
		 * 177.5
		 * 체중 
		 * 88
		 * 
		 *  **학생 키 정보**
		 *  이름: 강호동
		 *  키: 177.5cm
		 *  체중: 88kg
		 * 
		 *  (표준몸무게: (키-100)*0.9
		 *  권장 표준 몸무게는 69.75kg 입니다*/
		
		Scanner sc=new Scanner(System.in);
		
		String name;
		int cm;
		int kg;
		
		name=sc.nextLine();
		cm=sc.nextInt();
		kg=sc.nextInt();
		
		System.out.println("**학생 키 정보**");
		System.out.println("이름: "+name);
		System.out.println("키: "+cm+"cm");
		System.out.println("체중: "+kg+"kg");
		System.out.println("권장 표준 몸무게는 "+(cm-100)*0.9+"입니다");
		
		
		
		
		
	}

}
