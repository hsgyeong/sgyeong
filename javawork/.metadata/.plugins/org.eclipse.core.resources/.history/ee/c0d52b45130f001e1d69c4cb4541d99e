package day0620;

public class QuizIfOper_05 {

	public static void main(String[] args) {
		/*
		 상품명? 아이패드
		 수량? 3
		 가격? 500000
		 ====================
		 아이패드 3개는 총 1500000 원 입니다
		 3개 이상은 10프로 DC가 됩니다
		 DC된 총금액: 1350000
		 
		 */
		
		Scanner sc=new Scanner(System.in);
		
		String name;
		int su, price,DC;
			
		System.out.println("상품명?");
		name=sc.nextLine();
		System.out.println("수량?");
		su=sc.nextInt();
		System.out.println("가격?");
		price=sc.nextInt();
		
		if(su>=3)
		(price-price*0.1);
		
		System.out.println(name+" "+su+"개는 총 "+price+"원 입니다");
		System.out.println(su+"개 이상은 10프로 DC가 됩니다");
		System.out.println("DC된 총금액: "+DC);
		
	}

}
