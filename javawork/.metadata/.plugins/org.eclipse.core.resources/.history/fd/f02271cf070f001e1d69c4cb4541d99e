package day0620;

public class IfOperReview_02 {

	public static void main(String[] args) {
		/*
		 * (삼항연산자) 평가메세지: 90점이상: 참잘함   80점이상: 잘함   80점미만: 다음기회에...
		 * 
		 * (if문) 학점: 90점이상: A   80점이상: B   70점이상: C   60점이상: D   60점미만: F
		 * 점수를 입력하세요
		 * 88
		 * =====================
		 * 점수: 88점
		 * 평가메세지: 잘함
		 * 학점: B
		 */

		
		int score=88;
		String grade;
		
		grade=score>=90?"참잘함":
			  score>=80?"잘함":
			            "다음기회에...";
		
		System.out.print("점수를 입력하세요");
		Scanner sc=new Scanner(System.in);
		
		System.out.println("=================");
		System.out.println("점수: "+score+"점");
		System.out.println("평가메세지: "+grade);
		
	    
			
			
		
		
	}

}
