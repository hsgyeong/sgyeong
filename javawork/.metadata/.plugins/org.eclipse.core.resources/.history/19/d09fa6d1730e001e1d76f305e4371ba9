package day0619;

public class QuizIf_15 {

	public static void main(String[] args) {
		// 
		/* 당신의 점수는? 88
		 * ================================
		 * 90점이상: 장학생    80점이상: 우수상    80점미만: 재시험
		 * ================================
		 * 당신은 88점이므로 평가는 우수상
		 */
		
		
		int score;
		String grade;
		
		if (score>=90)
		grade="장학생";
		else if (score>=80)
		grade="우수상";
		else (score<80)
		grade="재시험";
		
		System.out.println("당신은 "+score+"점이므로 평가는 "+grade);
		
		
		
		
		
		

	}

}
