package spring.mysql.carmember;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PostMapping;

import com.mysql.cj.Session;

@Controller
public class CarMemberController {
	
	@Autowired
	CarMemberInter inter;
	
	@Autowired
	private SqlSession session;
	
	@Autowired
	CarMemberDao dao;
	
	@GetMapping("/member/list")
	public String memberStart(Model model)
	{
		//갯수 가져오기
		int count = inter.getTotalCount();
		
		//목록 가져오기
		List<CarMemberDto> list = dao.getAllCarmembers();
 		
		//request에 저장
		model.addAttribute("count", count);
		model.addAttribute("list", list);
		
		return "carmember/memberlist";
	}
	
	@GetMapping("/member/addform")
	public String addmember()
	{
		return "carmember/addform";
	}
	
	@PostMapping("/member/addmember")
	public String addmember(@ModelAttribute("dto") CarMemberDto dto)
	{
		session.insert("insertOfCarMember", dto);
	}
	
}
