package spring.mvc.munje;

import java.util.Map;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.ModelAndView;

import spring.data.dto.InfoDto;

@Controller
public class InfoController {

	@GetMapping("/info/result")
	public String form()
	{
		return "info/infoForm";
	}
	
	@PostMapping("/info/process")
	public ModelAndView process(@RequestParam Map<String, String> map)
	{
	ModelAndView model = new ModelAndView();
	
	model.addObject("name", map.get("name"));
	model.addObject("color", map.get("color"));
	model.addObject("hobby", map.get("hobby"));
	model.addObject("language", map.get("language"));
		
	model.setViewName("info/");
	return model;
	}
	
	@GetMapping("/info/infoForm")
	public ModelAndView start() {
		
		return "info/infoForm"
;	}
	
	@PostMapping("/info/process")
	public String result(@ModelAttribute("dto") InfoDto dto)
	{
		return "info/infoWrite";
	}
}
